<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane id="AnchorPane" prefWidth="600.0" styleClass="local-ips-root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.manyfaces.ui.controllers.LocalIPsController">
   <stylesheets>
      <URL value="@../styles/roboto-bold.css" />
      <URL value="@../styles/roboto-regular.css" />
      <URL value="@../styles/local-ips.css" />
   </stylesheets>
   <children>
      <VBox AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox VBox.vgrow="NEVER">
               <children>
                  <Label fx:id="headerLabel" styleClass="header-label" text="Local IP(s)" />
                  <JFXToggleButton alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" text="Enable Local IP masking">
                     <VBox.margin>
                        <Insets bottom="9.0" />
                     </VBox.margin>
                  </JFXToggleButton>
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="ip-details-box" VBox.vgrow="NEVER">
               <children>
                  <Label styleClass="field-header-label" text="Local IP 1" />
                  <JFXTextField />
               </children>
            </VBox>
            <VBox fx:id="extraIpsBox" styleClass="ip-details-box" VBox.vgrow="NEVER">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="ip-details-box">
                     <children>
                        <Label styleClass="field-header-label" text="Local IP 2" />
                        <HBox>
                           <children>
                              <JFXTextField>
                                 <HBox.margin>
                                    <Insets right="9.0" />
                                 </HBox.margin>
                              </JFXTextField>
                              <JFXButton styleClass="delete-button">
                                 <graphic>
                                    <FontIcon />
                                 </graphic>
                              </JFXButton>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox fx:id="hyperlinkBox" maxWidth="1.7976931348623157E308" prefHeight="200.0" styleClass="hyperlink-box" VBox.vgrow="NEVER">
               <children>
                  <Hyperlink fx:id="addIpHyperlink" text="Add new local IP">
                     <VBox.margin>
                        <Insets top="27.0" />
                     </VBox.margin>
                  </Hyperlink>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
