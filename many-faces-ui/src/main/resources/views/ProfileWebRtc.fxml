<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane id="AnchorPane" styleClass="profile-webrtc-root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.manyfaces.ui.controllers.ProfileWebRtcController">
   <stylesheets>
      <URL value="@../styles/roboto-regular.css" />
      <URL value="@../styles/roboto-bold.css" />
      <URL value="@../styles/profile-webrtc.css" />
   </stylesheets>
   <children>
      <VBox styleClass="profile-webrtc-content" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="33.0" AnchorPane.topAnchor="21.0">
         <children>
            <Label text="Behavior:" />
            <HBox fx:id="buttonsBox" styleClass="buttons-area">
               <children>
                  <RadioButton fx:id="alteredToggle" maxHeight="1.7976931348623157E308" mnemonicParsing="false" selected="true" styleClass="altered-toggle" text="Altered">
                     <toggleGroup>
                        <ToggleGroup fx:id="behaviorGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="disabledToggle" layoutX="228.0" layoutY="10.0" maxHeight="1.7976931348623157E308" mnemonicParsing="false" styleClass="disabled-toggle" text="Disabled" toggleGroup="$behaviorGroup" />
                  <RadioButton fx:id="realToggle" layoutX="261.0" layoutY="10.0" maxHeight="1.7976931348623157E308" mnemonicParsing="false" styleClass="real-toggle" text="Real" toggleGroup="$behaviorGroup" />
                  <HBox maxHeight="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <StackPane fx:id="alertAreaBox">
               <children>
                  <HBox fx:id="realAlert" styleClass="real-alert-box" visible="false" StackPane.alignment="TOP_CENTER">
                     <children>
                        <HBox styleClass="icon-box">
                           <children>
                              <FontIcon>
                                 <HBox.margin>
                                    <Insets bottom="24.0" left="12.0" right="11.0" top="32.0" />
                                 </HBox.margin>
                              </FontIcon>
                           </children>
                        </HBox>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="WebRTC plugin will be turned on and will leak your real IP. This mode is only recommended if you don't use proxies in your connection." wrapText="true" />
                     </children>
                  </HBox>
                  <HBox fx:id="disabledAlert" layoutX="10.0" layoutY="18.0" styleClass="disabled-alert-box" StackPane.alignment="TOP_CENTER">
                     <children>
                        <HBox maxHeight="1.7976931348623157E308" styleClass="icon-box">
                           <children>
                              <FontIcon>
                                 <HBox.margin>
                                    <Insets left="10.0" right="10.0" top="21.0" />
                                 </HBox.margin>
                              </FontIcon>
                           </children>
                        </HBox>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="WebRTC plugin will be turned off completely. Websites will see that you are turned off." wrapText="true" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets top="8.0" />
               </padding>
            </StackPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
